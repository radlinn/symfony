{% extends 'base.html.twig' %}

{% block title %}Wyniki wyszukiwania{% endblock %}

{% block body %}
    <h1>Wyniki dla: "{{ query }}"</h1>

    {% if articles is empty %}
        <p>Brak wyników.</p>
    {% else %}
        <ul>
            {% for article in articles %}
                <li>
                    <h3>{{ article.title }}</h3>
                    <p>{{ article.content|slice(0, 150) }}...</p>
                    <a href="{{ path('article_show', {'id': article.getId()}) }}">Czytaj więcej</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
